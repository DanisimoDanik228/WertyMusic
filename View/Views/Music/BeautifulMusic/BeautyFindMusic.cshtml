            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .search-form {
            display: flex;
            gap: 15px;
        }

        .search-form input {
            flex: 1;
            padding: 12px 15px;
            border-radius: 8px;
            border: none;
            outline: none;
            font-size: 1rem;
        }

        .search-form button {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            background: linear-gradient(to right, #00b4db, #0083b0);
            color: white;
            transition: 0.3s;
        }

        .search-form button:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .results-info {
            margin: 25px 0;
            font-size: 1.2rem;
            color: #8dd6f9;
        }

        .music-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: rgba(25, 40, 50, 0.7);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .music-table thead {
            background: linear-gradient(to right, #00b4db, #0083b0);
        }

        .music-table th,
        .music-table td {
            padding: 16px;
            text-align: left;
        }

        .music-table th {
            color: white;
            text-transform: uppercase;
            font-size: 0.95rem;
        }

        .music-table tbody tr {
            transition: 0.3s;
        }

        .music-table tbody tr:hover {
            background: rgba(0,180,219,0.1);
        }

        .music-name {
            font-weight: 600;
            color: white;
        }

        .artist-name {
            color: #8dd6f9;
        }

        .source-name {
            color: #a0e7a0;
        }

        .empty-message {
            text-align: center;
            margin-top: 30px;
            color: #aaa;
            font-size: 1.1rem;
        }

        .download-link {
            color: #ffb347;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
            display: inline-block;
            padding: 5px 10px;
            border-radius: 4px;
            background: rgba(255, 179, 71, 0.1);
        }

        .download-link:hover {
