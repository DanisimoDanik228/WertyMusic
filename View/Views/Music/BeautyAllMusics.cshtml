@model IEnumerable<Domain.Models.Music>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>–ú—É–∑—ã–∫–∞–ª—å–Ω–∞—è –∫–æ–ª–ª–µ–∫—Ü–∏—è</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #f0f0f0;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        }
        
        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(to right, #00b4db, #0083b0);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 2px 10px rgba(0, 180, 219, 0.2);
        }
        
        .song-count {
            background: rgba(0, 180, 219, 0.2);
            color: #00b4db;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 1.1rem;
            border: 1px solid rgba(0, 180, 219, 0.3);
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            color: #8dd6f9;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 25px;
            padding: 10px 20px;
            background: rgba(0, 131, 176, 0.15);
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .back-link:hover {
            background: rgba(0, 131, 176, 0.3);
            transform: translateX(-5px);
        }
        
        .back-link:before {
            content: "‚Üê";
            margin-right: 8px;
            font-size: 1.2rem;
        }
        
        .music-table {
            width: 100%;
            background: rgba(25, 40, 50, 0.7);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-collapse: separate;
            border-spacing: 0;
        }
        
        .music-table thead {
            background: linear-gradient(to right, #00b4db, #0083b0);
        }
        
        .music-table th {
            padding: 18px 15px;
            text-align: left;
            font-weight: 600;
            font-size: 1.1rem;
            color: white;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .music-table th:first-child {
            border-top-left-radius: 12px;
        }
        
        .music-table th:last-child {
            border-top-right-radius: 12px;
        }
        
        .music-table tbody tr {
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }
        
        .music-table tbody tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.03);
        }
        
        .music-table tbody tr:hover {
            background: rgba(0, 180, 219, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .music-table td {
            padding: 18px 15px;
            color: #e0e0e0;
        }
        
        .music-name {
            font-weight: 600;
            color: white;
            font-size: 1.05rem;
        }
        
        .artist-name {
            color: #8dd6f9;
        }
        
        .source-name {
            color: #a0e7a0;
        }
        
        .download-link {
            color: #ffb347;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
            display: inline-block;
            padding: 5px 10px;
            border-radius: 4px;
            background: rgba(255, 179, 71, 0.1);
        }
        
        .download-link:hover {
            color: #ff8c00;
            background: rgba(255, 179, 71, 0.2);
            text-decoration: underline;
        }
        
        .empty-message {
            text-align: center;
            padding: 50px;
            color: #aaa;
            font-size: 1.2rem;
        }
        
        .footer {
            margin-top: 40px;
            text-align: center;
            color: #aaa;
            font-size: 0.9rem;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        @@media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .music-table {
                display: block;
                overflow-x: auto;
            }
            
            .music-table th, .music-table td {
                padding: 12px 10px;
                font-size: 0.9rem;
            }
            
            .page-title {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1 class="page-title">–ú—É–∑—ã–∫–∞–ª—å–Ω–∞—è –∫–æ–ª–ª–µ–∫—Ü–∏—è</h1>
        <div class="song-count">–ü–µ—Å–µ–Ω: @Model.Count()</div>
    </div>
        
    <a href="/" class="back-link">–ù–∞ –≥–ª–∞–≤–Ω—É—é</a>
        
    <form asp-action="DownloadZipIds" method="post">
        <button type="submit">
            üì• –°–∫–∞—á–∞—Ç—å
        </button>
        <table class="music-table">
            <thead>
            <tr>
                <th><input type="checkbox" id="selectAll"/></th>
                <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                <th>–ò—Å–ø–æ–ª–Ω–∏—Ç–µ–ª—å</th>
                <th>–†–µ—Å—É—Ä—Å</th>
                <th>–°—Å—ã–ª–∫–∞ –Ω–∞ —Å–∫–∞—á–∏–≤–∞–Ω–∏–µ</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var song in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedIds" value="@song.Id" class="song-checkbox"/>
                    </td>
                    <td class="music-name">@song.MusicName</td>
                    <td class="artist-name">@song.ArtistName</td>
                    <td class="source-name">@song.SiteSource</td>
                    <td><a href="@song.DownloadUrl" class="download-link" target="_blank" rel="noopener noreferrer">–°–∫–∞—á–∞—Ç—å</a></td>
                </tr>
            }
            </tbody>
        </table>
    </form>
        
    @if (!Model.Any())
    {
        <div class="empty-message">–í –∫–æ–ª–ª–µ–∫—Ü–∏–∏ –ø–æ–∫–∞ –Ω–µ—Ç –º—É–∑—ã–∫–∏</div>
    }
    <div class="footer">
        –ú—É–∑—ã–∫–∞–ª—å–Ω–∞—è –∫–æ–ª–ª–µ–∫—Ü–∏—è &copy; 2023
    </div>
</div>
<script>
    const selectAll = document.getElementById('selectAll');
    const rowCheckboxes = document.querySelectorAll('.song-checkbox');

    selectAll.addEventListener('change', function() {
        rowCheckboxes.forEach(cb => {
            cb.checked = selectAll.checked;
        });
    });

    rowCheckboxes.forEach(cb => {
        cb.addEventListener('change', function() {
            const checkedCount = document.querySelectorAll('.song-checkbox:checked').length;
            const totalCount = rowCheckboxes.length;

            selectAll.checked = checkedCount === totalCount;
            selectAll.indeterminate = checkedCount > 0 && checkedCount < totalCount;
        });
    });
</script>
</body>
</html>